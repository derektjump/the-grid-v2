<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111216">

    <!-- Registration Layout (shown initially) -->
    <LinearLayout
        android:id="@+id/registration_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="48dp">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THE GRID"
            android:textSize="32sp"
            android:textColor="#9B59FF"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digital Signage"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:alpha="0.7"
            android:layout_marginBottom="48dp" />

        <!-- Instructions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Code:"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:alpha="0.9"
            android:layout_marginBottom="16dp" />

        <!-- Registration Code Display -->
        <TextView
            android:id="@+id/code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="------"
            android:textSize="72sp"
            android:textColor="#00F0FF"
            android:fontFamily="monospace"
            android:letterSpacing="0.2"
            android:layout_marginBottom="32dp"
            android:background="#1A1D24"
            android:padding="24dp"
            android:elevation="4dp" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connecting to server..."
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:alpha="0.6"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:maxWidth="600dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:visibility="invisible"
            android:indeterminateTint="#9B59FF" />

    </LinearLayout>

    <!-- WebView for Content Playback (hidden initially) -->
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#000000" />

</FrameLayout>
