# ============================================================================
# The Grid - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control - it contains secrets!

# ----------------------------------------------------------------------------
# Django Core Settings
# ----------------------------------------------------------------------------
DJANGO_SETTINGS_MODULE=the_grid.settings.local
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# ----------------------------------------------------------------------------
# Azure AD / Entra ID Authentication (OpenID Connect)
# ----------------------------------------------------------------------------
# Get these values from Azure Portal → Azure AD → App registrations → Your app

# Application (client) ID from Azure AD app registration Overview page
OIDC_RP_CLIENT_ID=12345678-1234-1234-1234-123456789012

# Client secret value from Azure AD app registration → Certificates & secrets
# IMPORTANT: This expires! Check expiration date and rotate regularly.
OIDC_RP_CLIENT_SECRET=your-client-secret-value-here

# Directory (tenant) ID from Azure AD app registration Overview page
# Use 'common' for multi-tenant applications
OIDC_TENANT_ID=87654321-4321-4321-4321-210987654321

# Optional: Signing algorithm (default is RS256 which Azure AD uses)
# OIDC_RP_SIGN_ALGO=RS256

# ----------------------------------------------------------------------------
# CSRF Protection (Required for Production)
# ----------------------------------------------------------------------------
# Comma-separated list of trusted origins for CSRF protection
# Local: http://localhost:8000,http://127.0.0.1:8000
# Production: https://the-grid-v2.azurewebsites.net
CSRF_TRUSTED_ORIGINS=http://localhost:8000

# ----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------------------------------------------
# For local development, set these to use local PostgreSQL
# Leave empty to use SQLite (for local development only)

DB_NAME=the-grid-v2
DB_USER=your-db-username
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432
DB_SSLMODE=prefer

# For Azure production, use:
# DB_HOST=your-server.postgres.database.azure.com
# DB_USER=your-admin-username@your-server

# ----------------------------------------------------------------------------
# Production Settings (Azure App Service)
# ----------------------------------------------------------------------------
# These should be set in Azure App Service Configuration, not in .env

# DEBUG=False
# ALLOWED_HOSTS=the-grid-v2.azurewebsites.net,*.azurewebsites.net
# DJANGO_LOG_LEVEL=INFO
